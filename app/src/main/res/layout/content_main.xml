<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.com.example.cruck.h2g.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ebdac0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to HIGHWAY2GO"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="206dp" />

    <Button
        android:id="@+id/signinBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" android:text="SignIn / Signup"
        android:background="#fcf9f9"
        android:layout_alignTop="@+id/signupBut"
        android:layout_alignStart="@+id/textView">
    </Button>
    <Button
        android:id="@+id/signupBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Signin/signup"
        android:background="#fefffe"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageButton"
        android:background="@mipmap/log"
        android:layout_above="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Customer"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignStart="@+id/signinBut" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Service Provider"
        android:id="@+id/textView3"
        android:layout_above="@+id/signupBut"
        android:layout_alignStart="@+id/signupBut" />

</RelativeLayout>
